issn = {0148-0227},
journal = {Journal of Geophysical Research: Atmospheres},
month = {nov},
number = {D21},
pages = {D21202},
title = {{SEVIRI rainfall retrieval and validation using weather radar observations}},
url = {http://doi.wiley.com/10.1029/2009JD012102},
volume = {114},

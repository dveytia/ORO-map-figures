issn = {16807324},
journal = {Atmospheric Chemistry and Physics},
number = {9},
pages = {6567--6584},
title = {{Stratospheric ozone measurements at Arosa (Switzerland): History and scientific relevance}},
volume = {18},
year = {2018}
}

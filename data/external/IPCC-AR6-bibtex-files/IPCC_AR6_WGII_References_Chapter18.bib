@article{RN686,
   author = {Maor, Moshe and Tosun, Jale and Jordan, Andrew},
   title = {Proportionate and disproportionate policy responses to climate change: core concepts and empirical applications},
   journal = {Journal of Environmental Policy & Planning},
   volume = {0},

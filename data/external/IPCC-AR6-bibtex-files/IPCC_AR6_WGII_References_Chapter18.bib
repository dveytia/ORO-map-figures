@article{RN1192,
   author = {Zavaleta, Carol and Berrang-Ford, Lea and Ford, James and Llanos-Cuentas, Alejandro and Cárcamo, César and Ross, Nancy A. and Lancha, Guillermo and Sherman, Mya and Harper, Sherilee L. and Group, the Indigenous Health and Adaption to Climate Change Research},

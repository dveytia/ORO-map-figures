doi = {10.5194/acp-16-10879-2016},
journal = {Atmospheric Chemistry and Physics},
number = {17},
pages = {10879--10897},
title = {{Size-resolved aerosol composition at an urban and a rural site in the Po Valley in summertime: implications for secondary aerosol formation}},

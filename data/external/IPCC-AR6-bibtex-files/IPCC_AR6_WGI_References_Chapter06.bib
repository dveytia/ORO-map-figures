doi = {10.1039/C7FD00009J},
issn = {1359-6640},
journal = {Faraday Discussions},
pages = {429--451},
publisher = {The Royal Society of Chemistry},
title = {{The social cost of methane: theory and applications}},
url = {http://dx.doi.org/10.1039/C7FD00009J},

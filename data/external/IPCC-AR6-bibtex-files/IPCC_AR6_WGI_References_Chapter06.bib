keywords = {Air pollution,Climate change,Co-benefits,Industrial energy efficiency,Sectoral mitigation,WRF-Chem},
month = {nov},
pages = {1076--1084},
pmid = {28482455},
title = {{Substantial air quality and climate co-benefits achievable now with sectoral mitigation strategies in China}},
volume = {598},
year = {2017}

author = {McNorton, Joe and Chipperfield, Martyn P. and Gloor, Manuel and Wilson, Chris and Feng, Wuhu and Hayman, Garry D. and Rigby, Matt and Krumme, Paul B. and O'Doherty, Simon and Prinn, Ronald G. and Weiss, Ray F. and Young, Dickon and Dlugokencky, Ed and Montzka, Steve A.},

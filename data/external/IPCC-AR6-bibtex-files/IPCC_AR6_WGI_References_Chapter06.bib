keywords = {Air quality,Climate change,Climate policy,Ozone},
number = {3},
pages = {159--171},
title = {{Climate Change Penalty to Ozone Air Quality: Review of Current Understandings and Knowledge Gaps}},
url = {https://doi.org/10.1007/s40726-019-00115-6},
volume = {5},
year = {2019}

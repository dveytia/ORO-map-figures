journal = {Journal of Geophysical Research: Atmospheres},
month = {dec},
number = {23},
pages = {13,526--13,546},
title = {{Anthropogenically induced changes in twentieth century mineral dust burden and the associated impact on radiative forcing}},
type = {Article},
url = {http://doi.wiley.com/10.1002/2014JD022062},
volume = {119},
year = {2014}
}
@article{Stavrakou2014a,

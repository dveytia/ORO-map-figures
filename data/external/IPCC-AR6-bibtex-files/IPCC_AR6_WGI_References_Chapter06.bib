issn = {17586798},
journal = {Nature Climate Change},
language = {en},
month = {aug},
number = {6},
pages = {446--450},
title = {{Air-pollution emission ranges consistent with the representative concentration pathways}},
url = {http://www.nature.com/nclimate/journal/v4/n6/full/nclimate2178.html http://www.nature.com/nclimate/journal/v4/n6/pdf/nclimate2178.pdf},
volume = {4},

keywords = {atmospheric,butanes,isomeric ratio,pentanes,trends},
number = {7},
pages = {3772--3790},
title = {{Changes in Atmospheric Butanes and Pentanes and Their Isomeric Ratios in the Continental United States}},
url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1002/2017JD027709},
volume = {123},
year = {2018}
}

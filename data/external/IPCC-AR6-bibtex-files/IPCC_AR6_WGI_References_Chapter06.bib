pages = {2559--2574},
title = {{Using statistical models to explore ensemble uncertainty in climate impact studies: The example of air pollution in Europe}},
url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-84960171955{\&}doi=10.5194{\%}2Facp-16-2559-2016{\&}partnerID=40{\&}md5=600401aba0b304cec74b7c4cc52d2494},

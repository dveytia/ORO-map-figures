doi = {10.1073/pnas.1704884114},
issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
month = {may},
number = {21},
pages = {5324--5326},
title = {{Overexplaining or underexplaining methane's role in climate change}},

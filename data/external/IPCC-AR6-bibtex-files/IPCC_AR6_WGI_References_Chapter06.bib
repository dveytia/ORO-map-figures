author = {Lana, A and Bell, T G and Sim{\'{o}}, R and Vallina, S M and Ballabrera-Poy, J and Kettle, A J and Dachs, J and Bopp, L and Saltzman, E S and Stefels, J and Johnson, J E and Liss, P S},
doi = {10.1029/2010GB003850},

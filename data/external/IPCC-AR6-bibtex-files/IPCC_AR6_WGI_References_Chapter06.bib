journal = {Atmospheric Environment},
keywords = {Air pollution policy,Climate policy,Co-benefits,Representative concentration pathways,Scenarios},
pages = {577--591},
title = {{Exploring synergies between climate and air quality policies using long-term global and regional emission scenarios}},
volume = {140},
year = {2016}
}

doi = {https://doi.org/10.1016/j.atmosenv.2018.06.025},
issn = {1352-2310},
journal = {Atmospheric Environment},
keywords = {China,Organic aerosols,Source apportionment,Spatial distribution,Temporal variations},
pages = {187--212},
title = {{Characterization and source apportionment of carbonaceous PM2.5 particles in China – A review}},
url = {https://www.sciencedirect.com/science/article/pii/S1352231018304084},
volume = {189},

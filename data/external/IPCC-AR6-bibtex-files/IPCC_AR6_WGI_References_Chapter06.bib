pages = {318--325},
title = {{Characteristics of summertime PM2.5 organic and elemental carbon in four major Chinese cities: Implications of high acidity for water-soluble organic carbon (WSOC)}},
url = {http://www.sciencedirect.com/science/article/pii/S1352231010008836},
volume = {45},
year = {2011}
}

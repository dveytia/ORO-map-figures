isbn = {1680-7316},
issn = {16807324},
journal = {Atmospheric Chemistry and Physics},
number = {18},
pages = {10349--10366},
title = {{Investigating the observed sensitivities of air-quality extremes to meteorological drivers via quantile regression}},

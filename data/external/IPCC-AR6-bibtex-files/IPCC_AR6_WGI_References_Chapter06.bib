doi = {10.1073/pnas.1616426114},
issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
month = {may},
number = {21},
pages = {5373--5377},
title = {{Role of atmospheric oxidation in recent methane growth}},

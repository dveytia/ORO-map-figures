keywords = {PRB ozone,global change,tropospheric ozone},
month = {sep},
number = {D18},
pages = {D18312},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Effects of 2000–2050 changes in climate and emissions on global tropospheric ozone and the policy-relevant background surface ozone in the United States}},

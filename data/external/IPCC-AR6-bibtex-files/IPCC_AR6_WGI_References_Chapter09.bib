keywords = {Greenland,Sentinel-1,marine-terminating glacier,seasonal ice velocity,subglacial hydrology,surface meltwater},
number = {3},
pages = {1485--1495},
title = {{Resolving Seasonal Ice Velocity of 45 Greenlandic Glaciers With Very High Temporal Details}},

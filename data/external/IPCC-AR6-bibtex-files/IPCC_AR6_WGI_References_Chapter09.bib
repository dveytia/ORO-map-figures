month = {jun},
number = {3},
pages = {327--344},
publisher = {Springer},
title = {{Physical basis of coastal adaptation on tropical small islands}},
url = {http://www.psmsl.org/data/obtaining/},
volume = {8},
year = {2013}
}
@article{Foreman2013,

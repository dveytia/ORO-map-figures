journal = {International Journal of Climatology},
keywords = {Pyrenees,snow,trends,weather types},
month = {nov},
number = {14},
pages = {6122--6136},
title = {{Long‐term trends (1958–2017) in snow cover duration and depth in the Pyrenees}},

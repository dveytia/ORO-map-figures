journal = {Reviews of Geophysics},
keywords = {Barents Sea ice sheet,Svalbard,deglaciation,ice sheet dynamics,ice sheet modeling,marine ice sheet},
month = {dec},
number = {4},
pages = {1051--1098},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Geophysical constraints on the dynamics and retreat of the Barents Sea ice sheet as a paleobenchmark for models of marine ice sheet deglaciation}},
url = {https://doi.org/10.1002/2015RG000495},
volume = {53},

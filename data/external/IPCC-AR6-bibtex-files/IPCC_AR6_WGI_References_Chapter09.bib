title = {{From the extreme to the mean: Acceleration and tipping points of coastal inundation from sea level rise}},
url = {https://agupubs.onlinelibrary.wiley.com/doi/full/10.1002/2014EF000272 https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1002/2014EF000272 https://agupubs.onlinelibrary.wiley.com/doi/10.1002/2014EF000272},

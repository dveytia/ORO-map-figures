author = {Miller, Gifford H and Geirsd{\'{o}}ttir, {\'{A}}slaug and Zhong, Yafang and Larsen, Darren J and Otto-Bliesner, Bette L and Holland, Marika M and Bailey, David A and Refsnider, Kurt A and Lehman, Scott J and Southon, John R and Anderson, Chance and Bj{\"{o}}rnsson, Helgi and Thordarson, Thorvaldur},

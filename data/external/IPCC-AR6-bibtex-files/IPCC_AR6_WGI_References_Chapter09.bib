issn = {14764687},
journal = {Nature},
number = {7777},
pages = {233--236},
pmid = {31471591},
publisher = {Springer US},
title = {{Constraints on global mean sea level during Pliocene warmth}},
url = {http://dx.doi.org/10.1038/s41586-019-1543-2},
volume = {574},
year = {2019}
}
@article{https://doi.org/10.1029/2019MS002015,

month = {jun},
number = {25},
pages = {6357--6362},
title = {{Pronounced summer warming in northwest Greenland during the Holocene and Last Interglacial}},
url = {http://www.pnas.org/content/115/25/6357.abstract http://www.pnas.org/lookup/doi/10.1073/pnas.1720420115},
volume = {115},
year = {2018}
}
@article{McGuire2016,

keywords = {glacial geomorphology,glacier calving,glacier fluctuations,glacier modeling},
number = {220},
pages = {333--344},
publisher = {Cambridge University Press},
title = {{Terminus-driven retreat of a major southwest Greenland tidewater glacier during the early 19th century: insights from glacier reconstructions and numerical modelling}},
url = {https://www.cambridge.org/core/article/terminusdriven-retreat-of-a-major-southwest-greenland-tidewater-glacier-during-the-early-19th-century-insights-from-glacier-reconstructions-and-numerical-modelling/98D071BD4F6AE0C50D13F84F276CFF38},

doi = {10.1002/2017EF000663},
eprint = {1704.05597},
issn = {23284277},
journal = {Earth's Future},
keywords = {ambiguity,coastal flooding,deep uncertainty,ice sheet rise},
number = {12},
pages = {1217--1233},
title = {{Evolving Understanding of Antarctic Ice-Sheet Physics and Ambiguity in Probabilistic Sea-Level Projections}},
volume = {5},
year = {2017}
}
@article{Kopp2009,
abstract = {With polar temperatures 3-5 °C warmer than today, the last interglacial stage (125 kyr ago) serves as a partial analogue for 1-2 °C global warming scenarios. Geological records from several sites indicate that local sea levels during the last interglacial were higher than today, but because local sea levels differ from global sea level, accurately reconstructing past global sea level requires an integrated analysis of globally distributed data sets. Here we present an extensive compilation of local sea level indicators and a statistical approach for estimating global sea level, local sea levels, ice sheet volumes and their associated uncertainties. We find a 95{\%} probability that global sea level peaked at least 6.6 m higher than today during the last interglacial; it is likely (67{\%} probability) to have exceeded 8.0 m but is unlikely (33{\%} probability) to have exceeded 9.4 m. When global sea level was close to its current level (-10 m), the millennial average rate of global sea level rise is very likely to have exceeded 5.6 m kyr-1 but is unlikely to have exceeded 9.2 m kyr-1. Our analysis extends previous last interglacial sea level studies by integrating literature observations within a probabilistic framework that accounts for the physics of sea level change. The results highlight the long-term vulnerability of ice sheets to even relatively low levels of sustained global warming. {\textcopyright} 2009 Macmillan Publishers Limited. All rights reserved.},
author = {Kopp, R.E. and Simons, F.J. and Mitrovica, J.X. and Maloof, A.C. and Oppenheimer, M.},

pages = {156--160},
title = {{Multi-decadal trends in Antarctic sea-ice extent driven by ENSO–SAM over the last 2,000 years}},
url = {https://doi.org/10.1038/s41561-021-00697-1 https://www.nature.com/articles/s41561-021-00697-1},

doi = {10.1088/1748-9326/abb2c8},
issn = {1748-9326},
journal = {Environmental Research Letters},
month = {oct},
number = {10},
pages = {104079},
title = {{Projections of Arctic sea ice conditions and shipping routes in the twenty-first century using CMIP6 forcing scenarios}},
url = {http://iopscience.iop.org/10.1088/1748-9326/abb2c8 https://iopscience.iop.org/article/10.1088/1748-9326/abb2c8},

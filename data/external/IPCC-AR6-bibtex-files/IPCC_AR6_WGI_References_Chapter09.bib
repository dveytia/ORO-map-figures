doi = {10.1073/pnas.2015483118},
issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
month = {jan},
number = {2},
pages = {e2015483118},
publisher = {National Academy of Sciences},
title = {{Ocean melting of the Zachariae Isstr{\o}m and Nioghalvfjerdsfjorden glaciers, northeast Greenland}},
url = {https://www.pnas.org/content/118/2/e2015483118 http://www.pnas.org/lookup/doi/10.1073/pnas.2015483118},
volume = {118},
year = {2021}

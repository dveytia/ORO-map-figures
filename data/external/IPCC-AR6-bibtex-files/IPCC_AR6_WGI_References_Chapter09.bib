language = {EN},
month = {jan},
number = {1},
pages = {202--214},
title = {{Modeling the impact of wind intensification on Antarctic sea ice volume}},
url = {http://dx.doi.org/10.1175/JCLI-D-12-00139.1},
volume = {27},
year = {2014}
}

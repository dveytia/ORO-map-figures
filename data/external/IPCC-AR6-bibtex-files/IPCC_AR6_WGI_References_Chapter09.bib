issn = {10970088},
journal = {International Journal of Climatology},
keywords = {seasonal snow,snow cover,snow persistence,trends},
pages = {4369--4383},
title = {{Global snow zone maps and trends in snow persistence 2001–2016}},
volume = {38},
year = {2018}
}

number = {121},
pages = {355--369},
publisher = {Cambridge University Press},
title = {{Time-Scale for Adjustment of Glaciers to Changes in Mass Balance}},
url = {https://www.cambridge.org/core/article/timescale-for-adjustment-of-glaciers-to-changes-in-mass-balance/B34E832DC10EADCF6DF4220695F34B9A},
volume = {35},
year = {1989}
}
@article{Johannesson2020,
abstract = {Non-surface mass balance is non-negligible for glaciers in Iceland. Several Icelandic glaciers are in the neo-volcanic zone where a combination of geothermal activity, volcanic eruptions and geothermal heat flux much higher than the global average lead to basal melting close to 150 mm w.e. a−1 for the M{\'{y}}rdalsj{\"{o}}kull ice cap and 75 mm w.e. a−1 for the largest ice cap, Vatnaj{\"{o}}kull. Energy dissipation in the flow of water and ice is also rather large for the high-precipitation, temperate glaciers of Iceland resulting in internal and basal melting of 20–150 mm w.e. a−1. The total non-surface melting of glaciers in Iceland in 1995–2019 was 45–375 mm w.e. a−1 on average for the main ice caps, and was largest for M{\'{y}}rdalsj{\"{o}}kull, the south side of Vatnaj{\"{o}}kull and Eyjafjallaj{\"{o}}kull. Geothermal melting, volcanic eruptions and the energy dissipation in the flow of water and ice, as well as calving, all contribute, and thus these components should be considered in mass-balance studies. For comparison, the average mass balance of glaciers in Iceland since 1995 is −500 to −1500 mm w.e. a−1. The non-surface mass balance corresponds to a total runoff contribution of 2.1 km3 a−1 of water from Iceland.},
author = {J{\'{o}}hannesson, T{\'{o}}mas and P{\'{a}}lmason, Bolli and Hjartarson, {\'{A}}rni and Jarosch, Alexander H and Magn{\'{u}}sson, Eyj{\'{o}}lfur and Belart, Joaqu{\'{i}}n M C and Gudmundsson, Magn{\'{u}}s Tumi},

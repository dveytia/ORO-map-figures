keywords = {East Antarctic Ice Sheet,Pliocene,Wilkes Subglacial Basin,deglacial timescales,provenance,radiogenic isotopes},
pages = {109--116},
publisher = {Elsevier B.V.},
title = {{Pliocene deglacial event timelines and the biogeochemical response offshore Wilkes Subglacial Basin, East Antarctica}},

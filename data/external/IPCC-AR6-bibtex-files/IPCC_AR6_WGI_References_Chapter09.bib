doi = {10.1029/2018GL079706},
issn = {19448007},
journal = {Geophysical Research Letters},
number = {16},
pages = {8455--8461},
title = {{Basal Melt and Freezing Rates From First Noble Gas Samples Beneath an Ice Shelf}},
volume = {45},
year = {2018}
}

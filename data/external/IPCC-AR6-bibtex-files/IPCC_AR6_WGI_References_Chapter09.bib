month = {feb},
pages = {30--40},
title = {{Analysis of imposing tidal dynamics to nested numerical models}},
volume = {34},
year = {2012}
}
@article{Jay2009,
abstract = {Global sea level (GSL) rise is well documented. However, changes in high waters, including the tidal contribution, are sometimes more relevant than GSL rise. Analysis of 34 long tidal records from the Eastern Pacific Ocean shows that K1 and M2 amplitudes (jK1j and jM2j) are increasing, except for jM2j in the Gulf of Panama. North of 18N, jK1j and jM2j are both growing at 2.2{\%} century1. The mean increase in total tidal amplitude (0.59 mmyr1) is less than the present GSL rise (1.7 mmyr1). However, mean sea level is nearly constant in the NE Pacific, so tidal evolution plays a major regional role in changes in high water levels. The spatial pattern of tidal evolution suggests the influence of large-scale processes, and the similarity in spatial patterns for jK1j and jM2j excludes mechanisms with strong frequency dependence. Increasing tidal amplitudes may impact ocean mixing, nutrient supply, primary production, fisheries, and coastal erosion.},

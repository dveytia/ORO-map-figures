issn = {22966463},
journal = {Frontiers in Earth Science},
keywords = {ASTER,Himalaya,WorldView,digital elevation model (DEM),geodetic,high-resolution satellite imagery,hydrology,photogrammetry},
month = {jan},
pages = {363},
publisher = {Frontiers Media S.A.},
title = {{A Systematic, Regional Assessment of High Mountain Asia Glacier Mass Balance}},
url = {www.frontiersin.org},

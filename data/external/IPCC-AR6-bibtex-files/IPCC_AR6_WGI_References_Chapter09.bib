journal = {Earth System Dynamics},
keywords = {Antarctic ice sheet,Atmospheric sciences,Climatology,Forcing (mathematics),Future sea level,Geology,Glacier,Ice core,Ice shelf,Iceberg,Precipitation},
number = {4},
pages = {1153--1194},
title = {{Future sea level contribution from Antarctica inferred from CMIP5 model forcing and its dependence on precipitation ansatz}},
url = {https://esd.copernicus.org/articles/11/1153/2020/},
volume = {11},

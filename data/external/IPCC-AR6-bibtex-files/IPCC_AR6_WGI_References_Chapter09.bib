publisher = {Elsevier},
title = {{Validation of three global ocean models in the Weddell Sea}},
url = {https://www.sciencedirect.com/science/article/pii/S146350030900105X https://linkinghub.elsevier.com/retrieve/pii/S146350030900105X},
volume = {30},

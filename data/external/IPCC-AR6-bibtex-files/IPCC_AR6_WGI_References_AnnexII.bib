doi = {10.1029/2019MS001766},
issn = {19422466},
journal = {Journal of Advances in Modeling Earth Systems},
keywords = {E3SM,carbon cycle,carbon-climate feedbacks,coupled carbon-climate cycle model,nutrient limitation,phosphorus limitation,w644},
number = {9},
pages = {e2019MS001766},
title = {{The DOE E3SM v1.1 Biogeochemistry Configuration: Description and Simulated Ecosystem-Climate Responses to Historical Changes in Forcing}},

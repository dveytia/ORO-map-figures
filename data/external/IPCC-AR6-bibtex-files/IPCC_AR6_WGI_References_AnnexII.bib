journal = {Journal of Climate},
keywords = {Aerodynamics,Air-sea interaction,Algorithm,Sea surface,Surface flux,TOGA-COARE,w631},
month = {oct},
number = {10},
pages = {2628--2644},
title = {{Intercomparison of bulk aerodynamic algorithms for the computation of sea surface fluxes using TOGA COARE and TAO data}},
volume = {11},
year = {1998}
}

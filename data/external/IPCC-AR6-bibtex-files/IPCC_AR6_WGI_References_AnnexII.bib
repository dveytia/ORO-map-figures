doi = {10.1029/2019MS001851},
issn = {19422466},
journal = {Journal of Advances in Modeling Earth Systems},
keywords = {E3SM,EAMv1,aerosol,aerosol-cloud interaction,radiative forcing,snow impurity,w440},
number = {1},
pages = {e2019MS001851},
title = {{Aerosols in the E3SM Version 1: New Developments and Their Impacts on Radiative Forcing}},

journal = {Geoscientific Model Development},
keywords = {w700},
number = {2},
pages = {505--522},
title = {{Description and evaluation of a new four-mode version of the Modal Aerosol Module (MAM4) within version 5.3 of the Community Atmosphere Model}},
volume = {9},
year = {2016}
}

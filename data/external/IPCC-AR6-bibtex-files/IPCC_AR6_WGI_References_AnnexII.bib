issn = {00014338},
journal = {Izvestiya - Atmospheric and Ocean Physics},
number = {3},
pages = {357--371},
title = {{Reproduction of the large-scale state of water and sea ice in the Arctic Ocean in 1948-2002: Part I. Numerical model}},
volume = {45},
year = {2009}
}

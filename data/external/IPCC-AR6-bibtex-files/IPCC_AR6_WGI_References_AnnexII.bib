month = {jun},
number = {11-12},
pages = {3015--3038},
title = {{COSMO-CLM (CCLM) climate simulations over CORDEX-Africa domain: Analysis of the ERA-Interim driven simulations at 0.44° and 0.22° resolution}},
volume = {42},
year = {2014}
}

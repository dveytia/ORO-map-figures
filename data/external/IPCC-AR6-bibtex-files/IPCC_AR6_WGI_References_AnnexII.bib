issn = {21699291},
journal = {Journal of Geophysical Research: Oceans},
keywords = {CMIP6,FIO-ESM v2.0,SST diurnal cycle,Stokes drift,ocean surface waves,sea spray,w695},
mendeley-tags = {w695},
number = {6},
pages = {e2019JC016036},
title = {{FIO-ESM Version 2.0: Model Description and Evaluation}},
volume = {125},

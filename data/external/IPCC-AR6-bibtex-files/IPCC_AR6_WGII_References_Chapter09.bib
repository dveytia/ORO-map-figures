@article{RN1824,
   author = {Garcia, Raquel A. and Cabeza, Mar and Altwegg, Res and Araújo, Miguel B.},
   title = {Do projections from bioclimatic envelope models and climate change metrics match?},
   journal = {Global Ecology and Biogeography},

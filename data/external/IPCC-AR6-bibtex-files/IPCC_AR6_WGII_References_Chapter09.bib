@article{RN2310,
   author = {Mokadem, Naziha and Redhaounia, Belgacem and Besser, Houda and Ayadi, Yosra and Khelifi, Faten and Hamad, Amor and Hamed, Younes and Bouri, Salem},
   title = {Impact of climate change on groundwater and the extinction of ancient “Foggara” and springs systems in arid lands in North Africa: a case study in Gafsa basin (Central of Tunisia)},
   journal = {Euro-Mediterranean Journal for Environmental Integration},
   volume = {3},
   number = {1},

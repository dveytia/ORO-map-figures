}

@article{RN921,
   author = {Piao, Shilong and Yin, Guodong and Tan, Jianguang and Cheng, Lei and Huang, Mengtian and Li, Yue and Liu, Ronggao and Mao, Jiafu and Myneni, Ranga B. and Peng, Shushi and Poulter, Ben and Shi, Xiaoying and Xiao, Zhiqiang and Zeng, Ning and Zeng, ZhenZhong and Wang, Yingping},

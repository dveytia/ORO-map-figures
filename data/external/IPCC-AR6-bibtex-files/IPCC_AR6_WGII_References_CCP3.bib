@inbook{RN389,
   author = {Archer, Steven R. and Andersen, Erik M. and Predick, Katharine I. and Schwinning, Susanne and Steidl, Robert J. and Woods, Steven R.},
   title = {Woody Plant Encroachment: Causes and Consequences},
   booktitle = {Rangeland Systems: Processes, Management and Challenges},

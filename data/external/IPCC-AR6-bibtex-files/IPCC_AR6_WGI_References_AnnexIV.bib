issn = {1432-0894},
journal = {Climate Dynamics},
number = {1},
pages = {597--612},
title = {{On the relationship between Atlantic Ni{\~{n}}o variability and ocean dynamics}},
url = {https://doi.org/10.1007/s00382-017-3943-z},
volume = {51},
year = {2018}
}

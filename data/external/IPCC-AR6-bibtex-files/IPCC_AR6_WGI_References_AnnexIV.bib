issn = {0028-0836},
journal = {Nature},
month = {sep},
number = {7212},
pages = {523--527},
title = {{Intraseasonal interaction between the Madden–Julian Oscillation and the North Atlantic Oscillation}},
volume = {455},
year = {2008}
}

issn = {0027-0644},
journal = {Monthly Weather Review},
month = {aug},
number = {8},
pages = {1917--1932},
title = {{An All-Season Real-Time Multivariate MJO Index: Development of an Index for Monitoring and Prediction}},
url = {http://journals.ametsoc.org/doi/abs/10.1175/1520-0493{\%}282004{\%}29132{\%}3C1917{\%}3AAARMMI{\%}3E2.0.CO{\%}3B2},
volume = {132},

month = {sep},
pages = {704--717},
title = {{Climate-driven variability in the occurrence of major floods across North America and Europe}},
url = {http://dx.doi.org/10.1016/j.jhydrol.2017.07.027 https://linkinghub.elsevier.com/retrieve/pii/S002216941730478X},

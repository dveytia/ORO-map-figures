doi = {10.1002/2014GL059520},
journal = {Geophysical Research Letters},
keywords = {Climate Variability,Climate and Interannual Variability,Decadal Ocean Variability,ENSO,Sea Surface Temperature},
number = {6},
pages = {2093--2099},
title = {{The influence of different El Ni{\~{n}}o types on global average temperature}},

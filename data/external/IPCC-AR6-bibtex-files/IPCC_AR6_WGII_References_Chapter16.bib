@article{RN3063,
   author = {Ramachandran, A. and Dhanya, Praveen and Jaganathan, R. and RajaLakshmi, D. and Palanivelu, K.},
   title = {Spatiotemporal analysis of projected impacts of climate change on the major C3 and C4 crop yield under representative concentration pathway 4.5: Insight from the coasts of Tamil Nadu, South India},

@article{RN2737,
   author = {Fadairo, Olushola and Williams, Portia Adade and Nalwanga, Faridah Sendagire},
   title = {Perceived livelihood impacts and adaptation of vegetable farmers to climate variability and change in selected sites from Ghana, Uganda and Nigeria},

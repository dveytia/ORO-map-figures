@article{RN4087,
   author = {Doelman, Jonathan C. and Stehfest, Elke and van Vuuren, Detlef P. and Tabeau, Andrzej and Hof, Andries F. and Braakhekke, Maarten C. and Gernaat, David E. H. J. and van den Berg, Maarten and van Zeist, Willem-Jan and Daioglou, Vassilis and van Meijl, Hans and Lucas, Paul L.},
   title = {Afforestation for climate change mitigation: Potentials, risks and trade-offs},

@article{RN1730,
   author = {Folkerts, Mireille A. and Broede, Peter and Botzen, W. J. Wouter and Martinius, Mike L. and Gerrett, Nicola and Harmsen, Carel N. and Daanen, Hein A. M.},
   title = {Long Term Adaptation to Heat Stress: Shifts in the Minimum Mortality Temperature in the Netherlands},
   journal = {FRONTIERS IN PHYSIOLOGY},
   volume = {11},
   abstract = {It is essentially unknown how humans adapt or will adapt to heat stress caused by climate change over a long-term interval. A possible indicator of adaptation may be the minimum mortality temperature (MMT), which is defined as the mean daily temperature at which the lowest mortality occurs. Another possible indicator may be the heat sensitivity, i.e., the percentage change in mortality per 1 degrees C above the MMT threshold, or heat attributable fraction (AF), i.e., the percentage relative excess mortality above MMT. We estimated MMT and heat sensitivity/AF over a period of 23 years for older adults (>= 65 years) in the Netherlands using three commonly used methods. These methods are segmented Poisson regression (SEG), constrained segmented distributed lag models (CSDL), and distributed lag non-linear models (DLNM). The mean ambient temperature increased by 0.03 degrees C/year over the 23 year period. The calculated mean MMT over the 23-year period differed considerably between methods [16.4 +/- 1.2 degrees C (SE) (SEG), 18.9 +/- 0.5 degrees C (CSDL), and 15.3 +/- 0.4 degrees C DLNM]. MMT increased during the observed period according to CSDL (0.11 +/- 0.05 degrees C/year) and DLNM (0.15 +/- 0.02 degrees C/year), but not with SEG. The heat sensitivity, however, decreased for the latter method (0.06%/degrees C/year) and did not change for CSDL. Heat AF was calculated for the DLNM method and decreased with 0.07%/year. Based on these results we conclude that the susceptibility of humans to heat decreases over time, regardless which method was used, because human adaptation is shown by either an increase in MMT (CSDL and DLNM) or a decrease in heat sensitivity for unchanged MMT (SEG). Future studies should focus on what factors (e.g., physiological, behavioral, technological, or infrastructural adaptations) influence human adaptation the most, so it can be promoted through adaptation policies. Furthermore, future studies should keep in mind that the employed method influences the calculated MMT, which hampers comparability between studies.},
   keywords = {climate change
temperature
mortality
human adaptation
minimum mortality temperature
older adults},
   ISSN = {1664-042X},
   DOI = {10.3389/fphys.2020.00225},
   year = {2020},

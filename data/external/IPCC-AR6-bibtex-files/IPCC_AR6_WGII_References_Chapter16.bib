@article{RN2826,
   author = {Balkovič, Juraj and van der Velde, Marijn and Skalský, Rastislav and Xiong, Wei and Folberth, Christian and Khabarov, Nikolay and Smirnov, Alexey and Mueller, Nathaniel D. and Obersteiner, Michael},

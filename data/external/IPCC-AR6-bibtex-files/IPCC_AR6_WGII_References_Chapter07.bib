@article{RN967,
   author = {Fogg-Rogers, L. and Hayes, E. and Vanherle, K. and Papics, P. I. and Chatterton, T. and Barnes, J. and Slingerland, S. and Boushel, C. and Laggan, S. and Longhurst, J.},
   title = {Applying Social Learning to Climate Communications-Visualising 'People Like Me' in Air Pollution and Climate Change Data},

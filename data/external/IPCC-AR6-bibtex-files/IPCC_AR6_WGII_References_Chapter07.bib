@article{RN1271,
   author = {Huber, RI and Potapova, K and Ammosova, E and Beyer, W and Blagodatskiy, S and Desyatkin, R and Hoelzle, LE and Ignateva, M and Kokolova, L and Lemke, S and Neustroev, M and Nyukkanov, A and Protodyakonova, G and Reshetnikov, A and Romig, T and Shadrin, V and Samoilova, I and Semenov, S and Stepanov, K and Tarabukina, N and Vinokurova, L and Zakharova, R and Nifontov, K},
   title = {Symposium report: emerging threats for human health - impact of socioeconomic and climate change on zooanthroponosis in the Republic of Sakha (Yakutia), Russia},
   journal = {International Journal of Circumpolar Health},
   volume = {79},

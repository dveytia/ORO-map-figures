@article{RN206,
   author = {Ahlstrom, C. A. and Manuel, C. S. and Den Bakker, H. C. and Wiedmann, M. and Nightingale, K. K.},
   title = {Molecular ecology of Listeria spp., Salmonella, Escherichia coli O157:H7 and non-O157 Shiga toxin-producing E. coli in pristine natural environments in Northern Colorado},

@article{RN1909,
   author = {Nah, K and Bede-Fazekas, A and Trajer, AJ and Wu, JH},
   title = {The potential impact of climate change on the transmission risk of tick-borne encephalitis in Hungary},
   journal = {Bmc Infectious Diseases},

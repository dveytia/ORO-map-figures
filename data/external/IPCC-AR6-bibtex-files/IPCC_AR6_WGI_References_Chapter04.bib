month = {nov},
number = {21},
pages = {12195--12206},
title = {{Sea‐salt injections into the low‐latitude marine boundary layer: The transient response in three Earth system models}},
url = {https://onlinelibrary.wiley.com/doi/10.1002/2013JD020432},
volume = {118},
year = {2013}

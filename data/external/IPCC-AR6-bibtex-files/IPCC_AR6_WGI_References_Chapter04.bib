doi = {10.5194/gmd-8-51-2015},
issn = {1991-9603},
journal = {Geoscientific Model Development},
month = {jan},
number = {1},
pages = {51--68},
title = {{Partially coupled spin-up of the MPI-ESM: implementation and first results}},

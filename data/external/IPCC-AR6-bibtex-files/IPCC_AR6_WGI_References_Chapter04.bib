@article{Lemordant2018a,
abstract = {Predicting how increasing atmospheric CO 2 will affect the hydrologic cycle is of utmost importance for a range of applications ranging from ecological services to human life and activities. A typical perspective is that hydrologic change is driven by precipitation and radiation changes due to climate change, and that the land surface will adjust. Using Earth system models with decoupled surface (vegetation physiology) and atmospheric (radiative) CO 2 responses, we here show that the CO 2 physiological response has a dominant role in evapotranspiration and evaporative fraction changes and has a major effect on long-term runoff compared with radiative or precipitation changes due to increased atmospheric CO 2 . This major effect is true for most hydrological stress variables over the largest fraction of the globe, except for soil moisture, which exhibits a more nonlinear response. This highlights the key role of vegetation in controlling future terrestrial hydrologic response and emphasizes that the carbon and water cycles are intimately coupled over land.},
author = {Lemordant, L{\'{e}}o and Gentine, Pierre and Swann, Abigail S. and Cook, Benjamin I. and Scheff, Jacob},

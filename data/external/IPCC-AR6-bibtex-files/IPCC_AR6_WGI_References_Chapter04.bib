issn = {0894-8755},
journal = {Journal of Climate},
month = {jun},
number = {12},
pages = {4651--4663},
title = {{Reduction of Climate Sensitivity to Solar Forcing due to Stratospheric Ozone Feedback}},
url = {http://journals.ametsoc.org/doi/10.1175/JCLI-D-15-0721.1},
volume = {29},
year = {2016}

issn = {14320894},
journal = {Journal of Climate},
keywords = {Atmosphere-land interaction,Climate prediction,Climate simulation,Climate variability,Earth system modeling,Forecast verification/skill,Land-climate interactions,Multi-scale prediction enhancement,Surface temperature,Vegetation,Vegetation dynamics},

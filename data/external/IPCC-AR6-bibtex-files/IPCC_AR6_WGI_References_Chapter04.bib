pages = {1030--1039},
title = {{Tailoring Meridional and Seasonal Radiative Forcing by Sulfate Aerosol Solar Geoengineering}},
url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1002/2017GL076472 https://onlinelibrary.wiley.com/doi/abs/10.1002/2017GL076472},
volume = {45},
year = {2018}

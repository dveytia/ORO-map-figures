journal = {Geoscientific Model Development},
month = {sep},
number = {9},
pages = {3659--3680},
title = {{Requirements for a global data infrastructure in support of CMIP6}},
url = {https://www.geosci-model-dev-discuss.net/gmd-2018-52/ https://gmd.copernicus.org/articles/11/3659/2018/},

pages = {707--727},
title = {{Evaluation of Northern Hemisphere Blocking Climatology in the Global Environment Multiscale Model}},
url = {https://doi.org/10.1175/MWR-D-12-00134.1 http://journals.ametsoc.org/doi/abs/10.1175/MWR-D-12-00134.1},
volume = {141},
year = {2013}
}

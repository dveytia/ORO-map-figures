journal = {Proceedings of the National Academy of Sciences},
keywords = {CMIP5,IPCC,abrupt climate change,climate change,critical transitions},
month = {oct},
number = {43},
pages = {E5777--E5786},
pmid = {26460042},
publisher = {National Academy of Sciences},
title = {{Catalogue of abrupt shifts in Intergovernmental Panel on Climate Change climate models}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/26460042 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4629371},

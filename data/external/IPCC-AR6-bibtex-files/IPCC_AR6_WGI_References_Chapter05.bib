pages = {10196--10213},
title = {{The impact of geoengineering on vegetation in experiment G1 of the GeoMIP}},
url = {https://doi.org/10.1002/2015JD024202 http://doi.wiley.com/10.1002/2015JD024202},
volume = {120},

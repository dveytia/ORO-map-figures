issn = {18791026},
journal = {Science of the Total Environment},
pages = {144341},
publisher = {Elsevier B.V.},
title = {{Evaluating nature-based solutions for climate mitigation and conservation requires comprehensive carbon accounting}},
volume = {769},
year = {2021}
}

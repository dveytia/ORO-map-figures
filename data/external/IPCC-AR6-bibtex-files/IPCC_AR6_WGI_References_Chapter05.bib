keywords = {PETM,Tethys,biomarkers,carbon burial,redox,trace elements},
number = {6},
pages = {471--488},
title = {{The spread of marine anoxia on the northern Tethys margin during the Paleocene–Eocene Thermal Maximum}},
volume = {29},
year = {2014}

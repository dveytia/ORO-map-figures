issn = {1748-9326},
journal = {Environmental Research Letters},
number = {3},
pages = {34010},
publisher = {IOP Publishing},
title = {{Potential and costs of carbon dioxide removal by enhanced weathering of rocks}},
volume = {13},
year = {2018}
}

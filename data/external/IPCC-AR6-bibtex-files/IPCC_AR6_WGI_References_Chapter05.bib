journal = {Global Ecology and Biogeography},
keywords = {C sequestration,CO2,Free-air CO2 enrichment,Meta-analysis,Open top chamber,Plant root},
number = {10},
pages = {1095--1105},
title = {{Altered root traits due to elevated CO2: A meta-analysis}},

@article{RN717,
   author = {Gidhagen, Lars and Olsson, Jonas and Amorim, Jorge H. and Asker, Christian and Belusic, Danijel and Carvalho, Ana C. and Engardt, Magnuz and Hundecha, Yeshewatesfa and Körnich, Heiner and Lind, Petter and Lindstedt, David and Olsson, Esbjörn and Rosberg, Jörgen and Segersson, David and Strömbäck, Lena},
   title = {Towards climate services for European cities: Lessons learnt from the Copernicus project Urban SIS},
   journal = {Urban climate},
   volume = {31},
   pages = {100549},
   note = {2212-0955},
   abstract = {The growing share of Europe's population living in cities makes urban climate change impact assessment and adaptation a critical issue. The urban environment is characterized by its sensitivity to small-scale meteorological, hydrological and environmental processes. These are generally not fully described in climate models, largely because of the models' insufficient spatial resolution. The Urban SIS climate service offers historical and future simulated data downscaled to 1 km × 1 km resolution over selected European metropolitan areas. The downscaled data are subsequently used as input to air quality and hydrological impact models, all made available to users as Essential Climate Variables and Sectoral Impact Indicators through a web portal. This paper presents the Urban SIS climate service and demonstrates its functionality in a case study in Stockholm city, Sweden. Good model performance was attained for intra-city temperature gradients and small-scale precipitation extremes. Less positive results were obtained for large-scale precipitation and hydrology, mainly due to an insufficient domain size in the meteorological and climate modelling, in turn related to the substantial computational requirements. An uncertainty classification approach was developed to aid the interpretation and user application of the data. We hope our lessons learnt will support future efforts in this direction. •Historical and future high-resolution simulation of urban climate.•Variables and indicators selected in close communication with end-users.•Good reproduction of e.g. urban temperature gradients and local rainfall extremes.•Large-scale precipitation and hydrology affected by computational limitations.•Urban climate service enabling data visualization and download.},
   keywords = {Hydrology
Climate adaptation
Air quality
Climate impacts
Cities
Meteorology},
   ISSN = {2212-0955},
   DOI = {10.1016/j.uclim.2019.100549},
   year = {2020},

@article{RN1806,
   author = {Srinivasan, Veena and Thomas, Bejoy K. and Jamwal, Priyanka and Lele, Sharachchandra},
   title = {Climate vulnerability and adaptation of water provisioning in developing countries: approaches to disciplinary and research-practice integration},
   journal = {Current Opinion in Environmental Sustainability},
   volume = {5},

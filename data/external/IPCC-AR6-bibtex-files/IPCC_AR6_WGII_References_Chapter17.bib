@article{RN704,
   author = {Gerlak, Andrea K. and Mason, Simon J. and Daly, Meaghan and Liverman, Diana and Guido, Zack and Soares, Marta Bruno and Vaughan, Catherine and Knudson, Chris and Greene, Christina and Buizer, James and Jacobs, Katharine},
   title = {The Gnat and the Bull Do Climate Outlook Forums Make a Difference?},
   journal = {Bulletin of the American Meteorological Society},
   volume = {101},

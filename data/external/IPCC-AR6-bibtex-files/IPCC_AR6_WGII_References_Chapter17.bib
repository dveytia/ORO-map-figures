@article{RN1366,
   author = {Nash, Nick and Whitmarsh, Lorraine and Capstick, Stuart and Hargreaves, Tom and Poortinga, Wouter and Thomas, Gregory and Sautkina, Elena and Xenias, Dimitrios},

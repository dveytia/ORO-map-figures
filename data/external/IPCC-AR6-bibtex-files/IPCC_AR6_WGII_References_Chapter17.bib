   DOI = {10.1108/ijccsm-07-2015-0091},
   url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-84971570841&doi=10.1108%2fIJCCSM-07-2015-0091&partnerID=40&md5=43fb85368f5ad8ab95115521b8446612},

@inproceedings{RN591,
   author = {Espinoza, R. D. and Morris, J. W. F.},
   title = {Connecting climate risk to financial performance for infrastructure investments},
   volume = {2017-October},
   pages = {256-272},
   note = {Export Date: 22 April 2019},
   abstract = {Traditional DCF methods such as NPV add a risk premium to the risk-free rate. This emphasizes short-term cash flows and downplays long-term revenues and liabilities, causing an artificially induced time-bias into the valuation that obscures the risk/return trade-offs and increases the perception of unacceptable risks. The DNPV method explicitly quantifies the effects of both market and non-market risks on an investment in monetary terms and subtracts the value of these risks from expected cash flows. As such, DNPV explicitly quantifies the cost of risk, which allows the method to be used to discount the estimated cash flows (reduced by the cost of risk) using the risk-free rate. This eliminates, or at least reduces, the time bias effect inherent in NPV methods. Moreover, explicit risk quantification allows DNPV to integrate financial hedging instruments (e.g., weather derivatives) with engineering hedging mechanisms (e.g., designing weather resilience into an asset), thereby optimizing scarce project funding and financing. The DNPV method allows stakeholders to estimate the value of long-term investments taking into consideration long-term cash flows as well as downside risks, thus providing a clearer picture of the investment's risk/return profile. Additional information regarding the DNPV method and examples of investment valuation applications can be found at www.dnpv.org. © 2017 Air and Waste Management Association, A and WMA - Finding Common Ground on Climate Change Mitigation and Adaptation. All rights reserved.},
   url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85052329100&partnerID=40&md5=9469cfcf98c3934baa631d00dbd54af0},
